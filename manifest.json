{
  "manifest_version": 3,
  "name": "ECS:R Pro",
  "version": "1.0",
  "description": "Mejoras para ECSR: fondos personalizados y Discord en perfiles.",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "permissions": ["storage", "scripting", "activeTab"],
  "host_permissions": ["https://*.ecsr.io/*"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["https://*.ecsr.io/*"],
      "js": ["content.js"],
      "css": ["styles.css"]
    }
  ]
}
